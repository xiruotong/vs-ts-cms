# .editorconfig
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 源代码文件
[*.{js,ts,jsx,tsx,vue}]
indent_style = space
indent_size = 2

# 样式文件
[*.{css,less,scss,sass}]
indent_style = space
indent_size = 2

# 配置文件
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Git 忽略文件
[.gitignore]
indent_style = space
indent_size = 2

# Markdown 文档
[*.md]
trim_trailing_whitespace = false
max_line_length = 80